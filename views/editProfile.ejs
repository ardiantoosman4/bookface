<!DOCTYPE html>
<html lang="en">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>bookface</title>
</head>
<body>
  <%- include('navbar',{userProfile:data}) %>
  <div class="container">
    <% if (alertMsg.length>0) { %>
      <div class="alert alert-danger" role="alert">
        <% alertMsg.forEach(el => { %>
          <li style="color: red;"><%= el %></li>
        <% }) %>
      </div>
    <% } %>
    
    <form action="/profile" method="post" enctype="multipart/form-data">
      <div>
        <% if (data.imagePath) { %>
          <div>
            <img src="<%= data.imagePath %>" style="width: 200px;">
          </div>
          <div>
            <input type="file" id="imagePath" name="imagePath" value="<%= data.imagePath %>">
          </div>
        <% } else { %>
          <div>
            <img src="/images/defaultPP.jpg" style="width: 200px;">
          </div>
          <div>
            <input type="file" id="imagePath" name="imagePath" value="">
          </div>
        <% } %>
        
      </div>
      <div>
        <label for="name">Name : </label>
        <input type="text" name="name" id="name" value="<%= data.name %>">
      </div>
      <div>
        <label for="bio">Bio :</label>
        <input type="text" name="bio" id="bio" value="<%= data.bio %>">
      </div>
      <div>
        <label for="gender">Gender :</label>
        <% const genderOption = ['male','female'] %>
        <select name="gender" id="gender">
          <% genderOption.forEach(el => { %>
            <option value="<%= el %>" <%= data.gender === el ? "selected" :"" %>><%= el %></option>
          <% }) %>
        </select>
      </div>
      <input type="submit" value="Apply Change"> 
    </form>
  </div>
</body>
</html>

