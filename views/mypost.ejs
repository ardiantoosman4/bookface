<!DOCTYPE html>
<html lang="en">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>bookface</title>
</head>
<body>
  <%- include('navbar',{userProfile}) %>
  <div class="container">
    <a href="/mypost/add" class="btn btn-primary">Add Post</a>
    <h6 style="color: red;"><%= deleteMsg %></h6>
  
    <table class="table table-bordered">
      <tr>
        <th>User Name</th>
        <th>Created Date</th>
        <th>Title</th>
        <th>Image</th>
        <th>Content</th>
        <th>Action</th>
      </tr>
      <% data.forEach(el => { %>
        <tr>
          <td><%= el.User.username %></td>
          <td><%= formatDate(el.createdAt) %></td>
          <td><%= el.title %></td>
          <% if (el.imagePath) { %>
            <td> <img src="<%= el.imagePath%>" style="width:100px"></td>
            <% } else { %>
              <td></td>
          <% } %>
          <td><%= el.content %></td>
          <td><a href="/mypost/<%= el.id %>/delete">Delete</a></td>
  
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>

